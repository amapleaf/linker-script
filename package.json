{
    "name": "linker-script",
    "displayName": "Linker Script",
    "description": "The extension is developed for linker script, which mainly provides intelligent complement, grammatical cues, and other functions.",
    "icon": "img/Script.png",
    "publisher": "amapleaf",
    "repository": {
        "url": "https://github.com/amapleaf/linker-script"
    },
    "version": "0.1.0",
    "license": "Apache-2.0",
    "engines": {
        "vscode": "^1.30.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "workspaceContains:**/*.lds"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.sayHello",
                "title": "Hello World"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^8.10.25",
        "tslint": "^5.8.0",
        "typescript": "^3.1.4",
        "vsce": "^1.54.0",
        "vscode": "^1.1.25"
    }
}
